{
  "name": "instagram-desktop",
  "version": "1.0.0",
  "description": "Open Source Instagram Desktop App with Electron and TypeScript",
  "main": "src/index.ts",
  "scripts": {
    "dev": "nodemon --watch 'src/**/*.ts' --exec \"tsc && electron ./dist/index.js\"",
    "build": "tsc && electron-builder",
    "deploy:osx": "electron-builder --mac",
    "deploy:win": "electron-builder --win",
    "deploy:linux": "electron-builder --linux"
  },
  "keywords": [
    "instagram",
    "desktop",
    "electron",
    "typescript"
  ],
  "author": {
    "name": "Taeyeong Kim",
    "email": "devkim@hanarin.uk"
  },
  "license": "MIT",
  "dependencies": {
    "@swc/core": "^1.3.102",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "build": {
    "productName": "Instagram Desktop",
    "appId": "kr.cottons.instagram-desktop",
    "asar": true,
    "mac": {
      "target": [
        {
          "target": "default",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "directories": {
      "buildResources": "./resources/installer/",
      "output": "./dist/",
      "app": "."
    }
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  }
}
